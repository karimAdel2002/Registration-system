    Registered subjects: [ 
    {{registered_subjects1.name}} , {{registered_subjects2.name}},{{registered_subjects3.name}} ,{{registered_subjects4.name}} ,
    {{registered_subjects5.name}} ,{{registered_subjects6.name}} ]
    </div>
