    {{passed_subjects9.name}} ,{{passed_subjects10.name}} ,{{passed_subjects11.name}} ,{{passed_subjects12.name}} ,
    {{passed_subjects13.name}} ,{{passed_subjects14.name}} ,{{passed_subjects15.name}} ]
</div>
