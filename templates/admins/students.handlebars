  <body>
    <div class="container">
  <br>
    <div class="d-flex justify-content-between">
  <h1 style="font-size: 60px;color: #2f1dd3;">All Students</h1> <br><br>
  <div>
    <form action="/admins" >
      <button type="submit" class="btn btn-light" style="font-size: 160%;">Back</button>
      </form>
  </div>
  </div>
  
<br><br>
  
  {{#each student}}
  <div class="d-flex justify-content-between">
  <h1 style="font-size: 40px; color: black;">
    {{name}}
    </h1>
    <div style="font-size: x-large;" class="myDiv">
     <a href="/admins/{{_id}}/edit_students">Edit</a>
     <form action="/admins/{{_id}}/delete_student?_method=DELETE" method="post">
      <button type="submit" class="btn btn-danger">Delete</button>
      </form>
    </div>
  </div>
<div style="font-size:large;color: #ffffff;">
    Username:
    {{username}}
</div>
<div style="font-size:large;color: #ffffff;">
